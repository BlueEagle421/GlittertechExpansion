<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef Abstract="True" Name="USH_UpgradeBase" ParentName="ResourceBase">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Standard_Drop</soundDrop>
        <stackLimit>5</stackLimit>
        <healthAffectsPrice>false</healthAffectsPrice>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>0.8</Mass>
            <Flammability>0.6</Flammability>
            <DeteriorationRate>2.0</DeteriorationRate>
        </statBases>
        <intricate>true</intricate>
        <thingCategories>
            <li>Manufactured</li>
        </thingCategories>
        <tradeability>Sellable</tradeability>
    </ThingDef>

    <ThingDef ParentName="USH_UpgradeBase">
        <defName>USH_UpgradeDamage</defName>
        <label>upgrade lens (power)</label>
        <description>A glittertech socket containing specialized instructions for mechanites within the overclocked firearm coating. This variant grants a damage boost.</description>
        <graphicData>
            <texPath>Things/Item/UpgradeDamage</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="USH_GE.CompProperties_OverclockUpgrade">
                <upgradeLabel>power</upgradeLabel>
                <statOffsets>
                    <RangedWeapon_DamageMultiplier>0.12</RangedWeapon_DamageMultiplier>
                </statOffsets>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="USH_UpgradeBase">
        <defName>USH_UpgradeRange</defName>
        <label>upgrade lens (spotting)</label>
        <description>A glittertech socket containing specialized instructions for mechanites within the overclocked firearm coating. This variant grants a range boost.</description>
        <graphicData>
            <texPath>Things/Item/UpgradeRange</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="USH_GE.CompProperties_OverclockUpgrade">
                <upgradeLabel>spotting</upgradeLabel>
                <statOffsets>
                    <RangedWeapon_RangeMultiplier>0.2</RangedWeapon_RangeMultiplier>
                </statOffsets>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="USH_UpgradeBase">
        <defName>USH_UpgradeSpeed</defName>
        <label>upgrade lens (quickdraw)</label>
        <description>A glittertech socket containing specialized instructions for mechanites within the overclocked firearm coating. This variant grants a cooldown and warmup time reduction.</description>
        <graphicData>
            <texPath>Things/Item/UpgradeSpeed</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="USH_GE.CompProperties_OverclockUpgrade">
                <upgradeLabel>quickdraw</upgradeLabel>
                <burstShotSpeedMultiplier>1.35</burstShotSpeedMultiplier>
                <statOffsets>
                    <RangedWeapon_WarmupMultiplier>-0.16</RangedWeapon_WarmupMultiplier>
                    <RangedWeapon_Cooldown>-0.28</RangedWeapon_Cooldown>
                </statOffsets>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="USH_UpgradeBase">
        <defName>USH_UpgradeStability</defName>
        <label>upgrade lens (stability)</label>
        <description>A glittertech socket containing specialized instructions for mechanites within the overclocked firearm coating. This variant prevents the firearm from spontaneous and post mortem ignition.</description>
        <graphicData>
            <texPath>Things/Item/UpgradeStability</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="USH_GE.CompProperties_OverclockUpgrade">
                <upgradeLabel>stability</upgradeLabel>
                <preventsIncidents>true</preventsIncidents>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="USH_UpgradeBase">
        <defName>USH_UpgradeArmor</defName>
        <label>upgrade lens (piercing)</label>
        <description>A glittertech socket containing specialized instructions for mechanites within the overclocked firearm coating. This variant grants an armor penetration boost.</description>
        <graphicData>
            <texPath>Things/Item/UpgradeArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="USH_GE.CompProperties_OverclockUpgrade">
                <upgradeLabel>piercing</upgradeLabel>
                <statOffsets>
                    <RangedWeapon_ArmorPenetrationMultiplier>0.24</RangedWeapon_ArmorPenetrationMultiplier>
                </statOffsets>
            </li>
        </comps>
    </ThingDef>

</Defs>