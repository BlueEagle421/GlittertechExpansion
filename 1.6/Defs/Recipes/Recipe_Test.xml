        <ingredients Inherit="false">
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>3</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Gold</li>
                    </thingDefs>
                </filter>
                <count>0.1</count>
            </li>
        </ingredients>
        <products>
            <USH_GlitterChip>1</USH_GlitterChip>
        </products>
        <descriptionHyperlinks>
            <ThingDef>USH_GlitterChip</ThingDef>
        </descriptionHyperlinks>
    </RecipeDef>

    <RecipeDef ParentName="USH_BaseGlitterAnalyzerRecipe">
