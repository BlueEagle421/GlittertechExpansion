        <soundWorking>MoisturePump_Ambience</soundWorking>
        <workAmount>1800</workAmount>
        <gestationCycles>5</gestationCycles>
        <formingTicks>18000</formingTicks>
        <modExtensions>
            <li Class="GlitterworldUprising.ModExtension_UseGlittertechBill">
