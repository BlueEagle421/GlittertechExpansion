            <li>
                <filter>
                    <thingDefs>
                        <li>MedicineIndustrial</li>
                    </thingDefs>
                </filter>
                <count>4</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>USH_GlitterChip</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>

        <fixedIngredientFilter>
            <thingDefs>
                <li>MedicineIndustrial</li>
