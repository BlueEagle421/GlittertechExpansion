<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef>
    <defName>USH_Make_AddictionRemover</defName>
    <label>make addiction remover</label>
    <description>Make an addiction remover.</description>
    <jobString>Making an addiction remover.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>7200</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineUltratech</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>USH_GlitterChip</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Silver</li>
        <li>ComponentSpacer</li>
        <li>MedicineUltratech</li>
        <li>USH_GlitterChip</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <USH_AddictionRemover>1</USH_AddictionRemover>
    </products>
    <skillRequirements>
      <Intellectual>6</Intellectual>
      <Crafting>8</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>USH_NeuromodifiersBasicsRes</researchPrerequisite>
  </RecipeDef>


