<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <RecipeDef ParentName="ButcherCorpseMechanoidBase">
        <defName>USH_DisassembleCorpseMechanoid</defName>
        <label>disassemble mechanoid</label>
        <description>Disassemble a dead mechanoid to extract multiple valuable resources.</description>
        <jobString>Disassembling mechanoid.</jobString>
        <workAmount>300</workAmount>
        <soundWorking>Recipe_ButcherCorpseMechanoid</soundWorking>
        <specialProducts> <!-- tripled products -->
            <li>Butchery</li>
            <li>Butchery</li>
            <li>Butchery</li>
        </specialProducts>
    </RecipeDef>

    <RecipeDef>
        <defName>USH_DisassembleMechSlag</defName>
        <label>disassemble mechanoid chunk</label>
        <description>Use powerful glittertech to extract steel and plasteel from mechanoid slag chunks.</description>
        <jobString>Disassembling mechanoid slag.</jobString>
        <workAmount>400</workAmount>
        <workSpeedStat>ButcheryMechanoidSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <efficiencyStat>ButcheryMechanoidEfficiency</efficiencyStat>
        <effectWorking>ButcherMechanoid</effectWorking>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ChunkMechanoidSlag</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <Steel>15</Steel>
            <Plasteel>3</Plasteel>
        </products>
        <fixedIngredientFilter>
            <thingDefs>
                <li>ChunkMechanoidSlag</li>
            </thingDefs>
        </fixedIngredientFilter>
    </RecipeDef>

</Defs>