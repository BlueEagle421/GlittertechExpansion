<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BenchBase">
        <defName>USH_GlittertechFabricator</defName>
        <label>glittertech fabricator</label>
        <description>An advanced workstation filled with medicine-based mechanites capable of recreating glitterworld technology. While the advanced processors can handle most of the procedure by themselves, occasional human supervision is still necessary to manually guide the internal computer. Only then the machine can finish a recipe.\n\nIt requires a significant amount of power stored in batteries to initiate the long process of recipe formation.</description>
        <thingClass>USH_GE.Building_GlittertechFabricator</thingClass>
        <graphicData>
            <texPath>Things/Building/GlittertechFabricator</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(5,5)</drawSize>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
            <shadowData>
                <volume>(0.6, 0.8, 0.6)</volume>
            </shadowData>
        </graphicData>
        <tradeability>Sellable</tradeability>
        <castEdgeShadows>true</castEdgeShadows>
        <rotatable>true</rotatable>
        <costList>
            <Steel>260</Steel>
            <Silver>80</Silver>
            <Plasteel>50</Plasteel>
            <MedicineUltratech>18</MedicineUltratech>
            <ComponentSpacer>8</ComponentSpacer>
        </costList>
        <drawerType>MapMeshAndRealTime</drawerType>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <fillPercent>0.5</fillPercent>
        <useHitPoints>True</useHitPoints>
        <tickerType>Normal</tickerType>
        <hasInteractionCell>true</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <statBases>
            <MaxHitPoints>310</MaxHitPoints>
            <WorkToBuild>26000</WorkToBuild>
            <Mass>80</Mass>
            <Beauty>0</Beauty>
            <Flammability>0</Flammability>

            <USH_GlittertechDuration>1</USH_GlittertechDuration>
            <USH_GlittertechPowerStored>1</USH_GlittertechPowerStored>
            <WorkTableWorkSpeedFactor>1</WorkTableWorkSpeedFactor>
        </statBases>
        <size>(1,1)</size>
        <designationCategory>Production</designationCategory>
        <uiOrder>2100</uiOrder>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <surfaceType>Item</surfaceType>
        <recipes>
            <li>USH_FormGlittercore</li>

            <li>USH_FormMedicineUltratech_Bulk</li>
            <li>USH_FormPhilosophersStone_Bulk</li>
            <li>USH_FormAddictionRemover</li>
            <li>USH_FormMemoryCellEmptyBulk</li>
            <li>USH_FormShimmertalk</li>
            <li>USH_FormGammaSerum</li>
            <li>USH_FormADPShell</li>

            <li>USH_FormPlasteel</li>
            <li>USH_FormPlasteelBulk</li>
            <li>USH_TurnSteelToGold</li>
            <li>USH_TurnSteelToGoldBulk</li>
            <li>USH_TurnGoldToJade</li>
            <li>USH_TurnGoldToJadeBulk</li>

            <li>USH_Make_Neurotrainer_Shooting</li>
            <li>USH_Make_Neurotrainer_Melee</li>
            <li>USH_Make_Neurotrainer_Construction</li>
            <li>USH_Make_Neurotrainer_Mining</li>
            <li>USH_Make_Neurotrainer_Cooking</li>
            <li>USH_Make_Neurotrainer_Plants</li>
            <li>USH_Make_Neurotrainer_Animals</li>
            <li>USH_Make_Neurotrainer_Crafting</li>
            <li>USH_Make_Neurotrainer_Artistic</li>
            <li>USH_Make_Neurotrainer_Medicine</li>
            <li>USH_Make_Neurotrainer_Social</li>
            <li>USH_Make_Neurotrainer_Intellectual</li>
        </recipes>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>460</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Breakdownable" />
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>USH_LightGlitterpanel</li>
                    <li>USH_DarkGlitterpanel</li>
                </linkableFacilities>
            </li>
        </comps>
        <designationHotKey>Misc3</designationHotKey>
        <uiIconScale>0.45</uiIconScale>
        <uiIconOffset>(0, 0.2)</uiIconOffset>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>USH_GlittertechFabrication</li>
        </researchPrerequisites>
    </ThingDef>

    <WorkGiverDef>
        <defName>USH_DoBillsGlittertechFabricator</defName>
        <label>make things at glittertech fabricator</label>
        <giverClass>WorkGiver_DoBill</giverClass>
        <workType>Smithing</workType>
        <priorityInType>250</priorityInType>
        <fixedBillGiverDefs>
            <li>USH_GlittertechFabricator</li>
        </fixedBillGiverDefs>
        <verb>work at</verb>
        <gerund>working at</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

    <!--Dark supporter-->

    <ThingDef ParentName="BuildingBase">
        <defName>USH_DarkGlitterpanel</defName>
        <label>dark glitterpanel</label>
        <description>An advanced processor housing designed to work with glittertech fabricators. Each panel is responsible for handling different fields of mathematics and simulations.\n\nIt reduces forming duration and stored power needed to start the process.\n\nIt's more powerful then it's light counterpart.</description>
        <graphicData>
            <texPath>Things/Building/DarkGlitterpanel</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <drawSize>(1,1)</drawSize>
            <shadowData>
                <volume>(0.65, 1, 0.65)</volume>
            </shadowData>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <rotatable>false</rotatable>
        <castEdgeShadows>false</castEdgeShadows>
        <defaultPlacingRot>South</defaultPlacingRot>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsMisc</li>
        </thingCategories>
        <fillPercent>0.3</fillPercent>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <WorkToBuild>4000</WorkToBuild>
            <Mass>12</Mass>
            <Beauty>0</Beauty>
            <Flammability>0</Flammability>
        </statBases>
        <size>(1,1)</size>
        <costList>
            <Steel>40</Steel>
            <Plasteel>10</Plasteel>
            <ComponentIndustrial>4</ComponentIndustrial>
            <USH_Glittercore>2</USH_Glittercore>
        </costList>
        <comps>
            <li Class="CompProperties_Facility">
                <statOffsets>
                    <USH_GlittertechDuration>-0.08</USH_GlittertechDuration>
                    <USH_GlittertechPowerStored>-0.1</USH_GlittertechPowerStored>
                </statOffsets>
                <maxSimultaneous>4</maxSimultaneous>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>110</basePowerConsumption>
                <shortCircuitInRain>true</shortCircuitInRain>
            </li>
        </comps>
        <designationCategory>Misc</designationCategory>
        <uiIconScale>1</uiIconScale>
        <researchPrerequisites>
            <li>USH_DarkGlitterpanelsRes</li>
        </researchPrerequisites>
    </ThingDef>

    <!--Light supporter-->

    <ThingDef ParentName="BuildingBase">
        <defName>USH_LightGlitterpanel</defName>
        <label>light glitterpanel</label>
        <description>An advanced processor housing designed to work with glittertech fabricators. Each panel is responsible for handling different fields of mathematics and simulations.\n\nIt reduces forming duration, stored power needed to start the process and overall work speed by increasing the machine responsiveness.\n\nIt's less powerful then it's dark counterpart.</description>
        <graphicData>
            <texPath>Things/Building/LightGlitterpanel</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <drawSize>(1,1)</drawSize>
            <shadowData>
                <volume>(0.65, 1, 0.65)</volume>
            </shadowData>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <rotatable>false</rotatable>
        <castEdgeShadows>false</castEdgeShadows>
        <defaultPlacingRot>South</defaultPlacingRot>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsMisc</li>
        </thingCategories>
        <fillPercent>0.3</fillPercent>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <WorkToBuild>3800</WorkToBuild>
            <Mass>12</Mass>
            <Beauty>0</Beauty>
            <Flammability>0</Flammability>
        </statBases>
        <size>(1,1)</size>
        <costList>
            <Steel>40</Steel>
            <Plasteel>10</Plasteel>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <comps>
            <li Class="CompProperties_Facility">
                <statOffsets>
                    <USH_GlittertechDuration>-0.02</USH_GlittertechDuration>
                    <WorkTableWorkSpeedFactor>0.1</WorkTableWorkSpeedFactor>
                </statOffsets>
                <maxSimultaneous>4</maxSimultaneous>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>80</basePowerConsumption>
                <shortCircuitInRain>true</shortCircuitInRain>
            </li>
        </comps>
        <designationCategory>Misc</designationCategory>
        <uiIconScale>1</uiIconScale>
        <researchPrerequisites>
            <li>USH_LightGlitterpanelsRes</li>
        </researchPrerequisites>
    </ThingDef>

    <StatDef>
        <defName>USH_GlittertechPowerStored</defName>
        <label>stored power need multiplier</label>
        <description>This value represents the multiplier of stored power needed to start forming recipes.</description>
        <category>Building</category>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0</minValue>
        <maxValue>1</maxValue>
        <toStringStyle>PercentZero</toStringStyle>
        <showIfUndefined>false</showIfUndefined>
        <displayPriorityInCategory>3000</displayPriorityInCategory>
    </StatDef>

    <StatDef>
        <defName>USH_GlittertechDuration</defName>
        <label>forming duration</label>
        <description>This value represents the multiplier of forming recipes duration.</description>
        <category>Building</category>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0</minValue>
        <maxValue>1</maxValue>
        <toStringStyle>PercentZero</toStringStyle>
        <showIfUndefined>false</showIfUndefined>
        <displayPriorityInCategory>3000</displayPriorityInCategory>
    </StatDef>

</Defs>