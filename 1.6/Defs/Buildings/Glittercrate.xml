<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="SkyfallerBase">
    <defName>USH_GlittercrateIncoming</defName>
    <label>glitterworld crate (incoming)</label>
    <size>(1, 1)</size>
    <skyfaller>
      <shadowSize>(1.5, 1.5)</shadowSize>
      <explosionRadius>2</explosionRadius>
      <explosionDamage>Bomb</explosionDamage>
      <cameraShake>1</cameraShake>
      <ticksToImpactRange>140~160</ticksToImpactRange>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="CrateBase">
    <defName>USH_Glittercrate</defName>
    <label>glitterworld crate</label>
    <description>An ancient glitterworld container full of valuables.</description>
    <graphicData>
      <texPath>Things/Building/Glittercrate_Closed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <size>(1, 1)</size>
    <fillPercent>0.2</fillPercent>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
    </statBases>
    <rotatable>false</rotatable>
    <comps>
      <li Class="CompProperties_EmptyStateGraphic">
        <graphicData>
          <texPath>Things/Building/Glittercrate_Open</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(1,1)</drawSize>
        </graphicData>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(150,150,150,0)</glowColor>
      </li>
      <li Class="CompProperties_LootSpawn">
        <contents>USH_RewardGlittercrate</contents>
      </li>
    </comps>
    <tickerType>Normal</tickerType>
  </ThingDef>

  <ThingSetMakerDef>
    <defName>USH_RewardGlittercrate</defName>
    <root Class="ThingSetMaker_Sum">
      <resolveInOrder>true</resolveInOrder>
      <options>

        <!-- high chance to drop Glitterheart -->
        <li>
          <thingSetMaker Class="ThingSetMaker_RandomOption">
            <options>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_Glitterheart</li>
                      </thingDefs>
                    </filter>
                    <countRange>1~1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>0.1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>Plasteel</li>
                      </thingDefs>
                    </filter>
                    <countRange>5~15</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>0.1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>Steel</li>
                      </thingDefs>
                    </filter>
                    <countRange>60~100</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>0.1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>Neutroamine</li>
                      </thingDefs>
                    </filter>
                    <countRange>30~50</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

            </options>
          </thingSetMaker>
        </li>

        <li>
          <thingSetMaker Class="ThingSetMaker_RandomOption">
            <options>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>MedicineUltratech</li>
                      </thingDefs>
                    </filter>
                    <countRange>2~4</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_Shimmertalk</li>
                      </thingDefs>
                    </filter>
                    <countRange>1~1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_Shell_ADP</li>
                      </thingDefs>
                    </filter>
                    <countRange>1~2</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_AddictionRemover</li>
                      </thingDefs>
                    </filter>
                    <countRange>1~1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_GammaSerum</li>
                      </thingDefs>
                    </filter>
                    <countRange>1~1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_MemoryCellEmpty</li>
                      </thingDefs>
                    </filter>
                    <countRange>1~1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>ThrumboHorn</li>
                      </thingDefs>
                    </filter>
                    <countRange>1~2</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>Luciferium</li>
                      </thingDefs>
                    </filter>
                    <countRange>8~12</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>1</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>Neutroamine</li>
                      </thingDefs>
                    </filter>
                    <countRange>20~60</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>0.2</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_GoldenTeethReplacement</li>
                      </thingDefs>
                    </filter>
                    <countRange>1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>0.2</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_PlasteelTeethReplacement</li>
                      </thingDefs>
                    </filter>
                    <countRange>1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>0.2</weight>
                <thingSetMaker Class="ThingSetMaker_Count">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>USH_CryogenicNexus</li>
                      </thingDefs>
                    </filter>
                    <countRange>1</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

            </options>
          </thingSetMaker>
        </li>
      </options>
    </root>
  </ThingSetMakerDef>

</Defs>