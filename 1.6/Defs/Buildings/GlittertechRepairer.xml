<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>USH_GlittertechRepairer</defName>
        <label>glittertech repairer</label>
        <description>.</description>
        <thingClass>USH_GE.Building_GlittertechFabricator</thingClass>
        <graphicData>
            <texPath>Things/Building/GlittertechRepairer/GlittertechRepairer</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(3,3)</drawSize>
            <drawOffset>(0, 0, 0.1)</drawOffset>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
            <shadowData>
                <volume>(0.7, 0.8, 0.7)</volume>
            </shadowData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <rotatable>false</rotatable>
        <costList>
            <Steel>260</Steel>
            <Silver>120</Silver>
            <Plasteel>80</Plasteel>
            <USH_Glittercore>5</USH_Glittercore>
        </costList>
        <canOverlapZones>false</canOverlapZones>
        <minifiedDef>MinifiedThing</minifiedDef>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <drawerType>MapMeshAndRealTime</drawerType>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <fillPercent>0.5</fillPercent>
        <useHitPoints>True</useHitPoints>
        <tickerType>Normal</tickerType>
        <statBases>
            <MaxHitPoints>310</MaxHitPoints>
            <WorkToBuild>30000</WorkToBuild>
            <Mass>80</Mass>
            <Beauty>0</Beauty>
        </statBases>
        <size>(1,1)</size>
        <designationCategory>Security</designationCategory>
        <thingCategories>
            <li>BuildingsSecurity</li>
        </thingCategories>
        <uiOrder>2100</uiOrder>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <surfaceType>Item</surfaceType>
        <building>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>
        <inspectorTabs>
            <li>USH_GE.ITab_Upgrades</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>550</basePowerConsumption>
                <idlePowerDraw>30</idlePowerDraw>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="USH_GE.CompProperties_GlittertechRepairer">
                <repairRadius>8.9</repairRadius>
                <activeOverlayPath>Things/Building/GlittertechRepairer/GlittertechRepairerActive</activeOverlayPath>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>4</glowRadius>
                <glowColor>(255, 255, 255, 0)</glowColor>
            </li>
            <li Class="USH_GE.CompProperties_Upgradable">
                <recipes>
                    <li>USH_TestUpgrade</li>
                </recipes>
            </li>
            <li Class="CompProperties_Stunnable">
                <affectedDamageDefs>
                    <li>Stun</li>
                    <li>EMP</li>
                </affectedDamageDefs>
            </li>
        </comps>
        <designationHotKey>Misc3</designationHotKey>
        <uiIconScale>0.45</uiIconScale>
        <uiIconOffset>(0, 0.2)</uiIconOffset>
        <specialDisplayRadius>8.9</specialDisplayRadius>
        <researchPrerequisites>
            <li>USH_GlittertechUtilitiesRes</li>
        </researchPrerequisites>
    </ThingDef>

    <RecipeDef>
        <defName>USH_TestUpgrade</defName>
        <label>shred mechanoid</label>
        <description>Shred a dead mechanoid to try to salvage usable material.</description>
        <jobString>Shredding mechanoid.</jobString>
        <workSpeedStat>ButcheryMechanoidSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <efficiencyStat>ButcheryMechanoidEfficiency</efficiencyStat>
        <effectWorking>ButcherMechanoid</effectWorking>
        <uiIconThing>Steel</uiIconThing>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Corpses</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <specialProducts>
            <li>Butchery</li>
        </specialProducts>
        <fixedIngredientFilter>
            <categories>
                <li>CorpsesMechanoid</li>
            </categories>
        </fixedIngredientFilter>
        <defaultIngredientFilter>
            <categories>
                <li>CorpsesMechanoid</li>
            </categories>
            <specialFiltersToDisallow>
                <li MayRequire="Ludeon.RimWorld.Biotech">AllowCorpsesMechFriendly</li>
            </specialFiltersToDisallow>
            <specialFiltersToAllow>
                <li MayRequire="Ludeon.RimWorld.Biotech">AllowCorpsesMechEnemy</li>
            </specialFiltersToAllow>
        </defaultIngredientFilter>
        <displayPriority>0</displayPriority>
        <workAmount>300</workAmount>
        <soundWorking>Recipe_ButcherCorpseMechanoid</soundWorking>
        <modExtensions>
            <li Class="USH_GE.ModExtension_RecipeUpgrade">

            </li>
        </modExtensions>
    </RecipeDef>

</Defs>