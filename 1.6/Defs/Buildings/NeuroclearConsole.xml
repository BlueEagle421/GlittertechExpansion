<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>USH_NeuroclearConsole</defName>
        <label>Neuroclear console</label>
        <description>A glittertech device designed to store and manage medical nanobots. These nanobots are capable of clearing residue anesthetics from designated patients after surgery, making recovery almost instantaneous, but still painless.\n\nThe nanobots require glitterworld medicine as a material source.\n\nThe device can be connected to up to three hospital beds.</description>
        <descriptionHyperlinks>
            <HediffDef>Anesthetic</HediffDef>
            <ThingDef>HospitalBed</ThingDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Things/Building/NeuroclearConsole</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <tradeability>Sellable</tradeability>
        <tickerType>Normal</tickerType>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.2</fillPercent>
        <statBases>
            <WorkToBuild>2400</WorkToBuild>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>30</Mass>
            <Flammability>0.7</Flammability>
        </statBases>
        <rotatable>false</rotatable>
        <size>(1,1)</size>
        <minifiedDef>MinifiedThing</minifiedDef>
        <costList>
            <Steel>60</Steel>
            <Silver>80</Silver>
            <Neutroamine>60</Neutroamine>
            <ComponentSpacer>1</ComponentSpacer>
            <USH_Glittercore>4</USH_Glittercore>
        </costList>
        <thingCategories>
            <li>BuildingsMisc</li>
        </thingCategories>
        <comps>
            <li Class="CompProperties_Facility">
                <maxSimultaneous>3</maxSimultaneous>
                <mustBePlacedAdjacent>false</mustBePlacedAdjacent>
            </li>
            <li Class="CompProperties_Refuelable">
                <fuelConsumptionRate>22</fuelConsumptionRate>
                <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
                <fuelCapacity>6</fuelCapacity>
                <fuelFilter>
                    <thingDefs>
                        <li>MedicineUltratech</li>
                    </thingDefs>
                </fuelFilter>
                <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>false</shortCircuitInRain>
                <basePowerConsumption>30</basePowerConsumption>
            </li>
            <li Class="USH_GE.CompProperties_NeuroclearConsole">
                <fuelConsumption>2</fuelConsumption>
                <hediffDefToRemove>Anesthetic</hediffDefToRemove>
                <fleckDef>USH_DesensitizingCloud</fleckDef>
                <soundDef>USH_Desensitize</soundDef>
                <activeTicks>1</activeTicks>
                <cooldownTicks>1000</cooldownTicks>
                <ticksToActivate>60</ticksToActivate>
                <jobString>activate</jobString>
                <onCooldownString>cooling off</onCooldownString>
                <activateTexPath>UI/Gizmos/Desensitize</activateTexPath>
                <requiresPower>true</requiresPower>
                <targetingParameters>
                    <canTargetBuildings>false</canTargetBuildings>
                    <canTargetAnimals>false</canTargetAnimals>
                    <canTargetMechs>false</canTargetMechs>
                    <onlyTargetControlledPawns>true</onlyTargetControlledPawns>
                </targetingParameters>
            </li>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <designationCategory>Misc</designationCategory>
        <uiIconScale>0.8</uiIconScale>
        <researchPrerequisites>
            <li>USH_NeuromodifiersBasicsRes</li>
        </researchPrerequisites>
    </ThingDef>

    <FleckDef ParentName="FleckBase">
        <defName>USH_DesensitizingCloud</defName>
        <graphicData>
            <texPath>Things/Mote/Smoke</texPath>
            <color>(0.427, 0.670, 0.235)</color>
            <drawSize>(2.5,2.5)</drawSize>
        </graphicData>
        <altitudeLayer>MoteOverhead</altitudeLayer>
        <fadeInTime>0.15</fadeInTime>
        <solidTime>1</solidTime>
        <fadeOutTime>1.2</fadeOutTime>
        <growthRate>0.025</growthRate>
    </FleckDef>

</Defs>